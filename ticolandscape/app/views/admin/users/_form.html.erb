<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= simple_form_for @user, :html => {:id => 'user_form'} do |f|%>
			<%= f.input :email, :input_html => {class: "form_control"}, :placeholder => "example@email.com", :maxlength => 50 %>
			<%= f.input :password, :input_html => {class: 'form-control'}, :placeholder => "*******", :maxlength => 50 %>
			<%= f.input :password_confirmation, :input_html => {class: 'form-control'}, :placeholder => "*******", :maxlength => 50 %>
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<input type="submit" class="btn btn-primary">
				</div>
			</div>
		<%end%>
	</div>
</div>